<div id="recipe-modal">
  <div class="modal fade bs-example-modal-sm" id="item-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button data-dismiss="modal" class="btn-close pull-right">&times;</button>
          <ul class="user-profile">
            <li class="profile-pic">
              <%= link_to image_tag("/assets/user-pic.jpg", :class => "img-responsive center-block"), "/cheff/#{params[:cheff_id]}", :id => "chef_info" %>
            </li>
            <li class="user-name">
              <h3>Mrs. Sharma
                <span class="user-level">Hola Star</span></h3>
            </li>
          </ul>
        </div>
        <div class="modal-body"> <!-- below content changes from jquery -->

          <ul class="square">
            <li class="recipe-block veg">
              <div class="recipe-header">
                <div class="add-lens"></div>
                <div class="recipe-name">Cheese Loaded Nachos with Beans</div>
                <div class="add-heart"></div>
              </div>
              <div class="recipe-image hidden">
              </div>
            </li>
            <li class="recipe-title hidden"></li>
            <li class="recipe-tags">
              <ul class="stock-value">
                <li class="recipe-stock"><span class="stock-count">10</span> left</li>
                <li class="recipe-price">180/-</li>
              </ul>
            </li>
          </ul>

        </div>
        <div class="modal-footer modal-form">
          <div class="row">
            <div class="col-xs-12 text-center">
              <div class="row">
                <div class="col-xs-3">
                  <button class="btn btn-orange disabled" type="button" id="add-order-minus" disabled>-1</button>
                </div>
                <div class="col-xs-3">
                  <p class="form-control looks-input" id="order-count">0</p>
                </div>
                <div class="col-xs-3">
                  <button class="btn btn-orange" type="button" id="add-order-plus">+1</button>
                </div>
                <div class="col-xs-3">
                  <button type="button" class="btn btn-link text-orange" data-dismiss="modal" id="order-done">Done</button>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div> <!-- modal ends -->
<input type="hidden" id="total_price" value= <%= calculate_total_price() %> />
<%= content_for :cheff_footer do %>
    <% if session[:cart].blank? %>
        <div id="cheff_footer">
            <%= render 'layouts/chef_footer' %>
        </div>
    <% else %>
        <%= render 'layouts/footer' %>
    <% end %>
<% end %>

