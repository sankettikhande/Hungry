<div class="col-xs-12">
  <div class="container-fluid back-white seperator-10">
    <h6 class="page-title">Become a Chef</h6>
  </div>
  <%= form_for @become_chef, :id => 'become-a-chef', :url => "/create_chef" do |f| %>
    <div class="row">
      <div class="col-xs-12">
        <div class="normal-body">
          <div class="input-card">
            <%= f.text_field :name, class: "lower-only", placeholder: "Enter your Name", required: true %>
          </div>
          <div class="input-card">
            <%= f.text_field :mobile_number, class: "lower-only", placeholder: "Enter your mobile number", required: true %>
          </div>
          <div class="input-card">
            <%= f.email_field :email, class: "lower-only", placeholder: "Enter your email", required: true %>
          </div>
          <div class="form-group talk-us">
            <%= f.text_area :description, :rows => 8, class: "form-control no-radius", placeholder: "Enter Description", required: true %>
          </div>

          <div class="form-group seperator-15">
            <%= f.submit "Submit", class: "btn btn-saffron" %>
          </div>
          <% if flash[:notice] %>
            <div class="successMsg"><%= flash[:notice] %></div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
