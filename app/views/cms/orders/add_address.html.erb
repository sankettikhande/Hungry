</div>
<div class="container">
          <div class="row">
                <div class="col-xs-12">
                  <div class="address-container">
                    <div class="row">
                      <div class="col-xs-12">
                        <% if hola_current_user %>
                        <%= form_tag "/payment-method", :method => "POST", :name => "orders", :id => "submit_order" do %>

                          <% hola_current_user.hola_user_addresses.each_with_index do |address, index| %>
                            <% next if address.address_array.blank? %>
                            <div class="form-group each-address">
                              <table class="table address-table">
                                  <colgroup><col class="col-xs-2 col-sm-1"><col class="col-xs-10 col-sm-11"></colgroup>
                                  <tr>
                                <!--    <td class="a-radio">
                                        <% if HolaUserAddress.pin_codes.include?(address.pin) %>
                                          <input type="radio" name="address_id" value="<%= address.id %>" id= '<%="address-#{address.id}"%>' class="validate[required]" data-errormessage="Please choose a address." >
                                        <% else %>
                                          <input type="radio" name="address_id" value="<%= address.id %>" id= '<%="address-#{address.id}"%>' class="validate[required]" data-errormessage="Please choose a address." disabled />
	
                                        <% end %>
                                    </td> -->
									
									<td class="text-center orange-check">
									<% if HolaUserAddress.pin_codes.include?(address.pin) %>
                                            <input name="address_id" type="radio" value="<%= address.id %>" id= '<%="address-#{address.id}"%>' class="css-checkbox validate[required]" data-errormessage="Please choose a address." >
											 <label for='<%="address-#{address.id}"%>' class="css-label"></label>
										 <% else %>	
										 <input type="radio" name="address_id" value="<%= address.id %>" id= '<%="address-#{address.id}"%>' class="validate[required]" data-errormessage="Please choose a address." disabled />

                                            <label for='<%="address-#{address.id}"%>' class="css-label"></label> 
										<% end %>	
                                      </td>
									
									
                                    <td>
                                        <label for='<%="address-#{address.id}"%>' style="cursor: hand">
                                          <p class="address-brief">
                                            <% address.address_array.each do |addrs| %>
                                              <span><%=addrs %><%= address.address_array.last == addrs ? "" : ", " %></span>
                                            <% end %>
                                          </p>
                                        </label>
                                        <% unless HolaUserAddress.pin_codes.include?(address.pin) %>
                                          <br/>
                                          <small class="alert-warning">Sorry! we are currently not delivering to this address</small>
                                        <% end %>
                                    </td>
									
									
									
									
									
                                  </tr>
