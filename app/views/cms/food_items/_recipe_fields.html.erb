      <%= link_to_add_fields "Add Steps", f, :prepration_steps %>
  </span>

  <div class="fields text_fields">
    <%= f.label :dish_type %>
    <%= f.select :dish_type, ["veg", "non-veg"], :include_blank => 'Select Veg/Non-Veg' %>
  </div>

  <div class="fields text_fields">
    <%= f.label :if_signature %>
    <%= f.select :if_signature, ["true", "false"] %>
  </div>

