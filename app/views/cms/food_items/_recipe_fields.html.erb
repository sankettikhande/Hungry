<%= stylesheet_link_tag "cms_custom" %>

<div class="fields apply-border">

  <div class="fields heading">
    Recipe
  </div>

  <div class="border-and_padding">
      <%= f.fields_for :sub_menus do |builder| %>
          <%= render 'sub_menu_fields', :f => builder %>
      <% end %>
      <span class="add-remove-links">
          <%= link_to_add_fields "Add Sub Menus", f, :sub_menus %>
      </span>
  </div>

  <div class="fields text_fields">
    <%= f.label :dish_type %>
    <%= f.select :dish_type, ["veg", "non-veg"], :include_blank => 'Select Veg/Non-Veg' %>
  </div>

  <div class="fields text_fields">
    <%= f.label :category %>
    <%= f.select :category, ["Main Course","Side Dish","Dessert"], :include_blank => "Select Category" %>
  </div>

  <div class="fields text_fields">
    <%= f.label :equipment_required %>
    <%= f.select :equipment_required, ["Gas/Electric Stove","Oven","Freezer","Frying Pan","Non-Stick Pan","Steamer","Pressure Cooker","Others"], :include_blank => 'Select Cooking Equipment' %>
  </div>

  <div class="fields text_fields">
    <%= f.label :preparation_time %>
    <%= f.text_field :preparation_time %>
  </div>

  <div class="fields text_fields">
    <%= f.label :total_time %>
    <%= f.text_field :total_time %>
  </div>

  <div class="fields text_fields">
    <%= f.label :servings_per_portion %>
    <%= f.text_field :servings %>
  </div>

  <div class="fields text_fields">
    <%= f.label :garnishing_tips %>
    <%= f.text_area :garnishing_tips, :class => 'recipe_text_area' %>
  </div>

  <div class="fields text_fields">
    <%= f.label :serving_tips %>
    <%= f.text_area :serving_tips, :class => 'recipe_text_area' %>
  </div>

  <div class="fields text_fields">
    <%= f.label :storage_instructions %>
    <%= f.text_area :storage_instructions, :class => 'recipe_text_area' %>
  </div>

  <div class="fields text_fields">
    <%= f.label :shelf_life %>
    <%= f.text_field :shelf_life %>
  </div>

</div>