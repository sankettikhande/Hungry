<%= stylesheet_link_tag "cms_custom" %>

<div class="fields apply-border">

  <div class="fields heading">
    Meal Info
  </div>

  <div class="fields text_fields">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="fields text_fields">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'recipe_text_area' %>
  </div>

  <div class="fields text_fields">
    <label for="meal_info_meal_image">Meal Image</label>
    <%= f.fields_for :picture, FoodItem.new do |i| %>
        <%= i.file_field :image, :class => 'meal_image' %>
    <% end %>
  </div>

  <div class="fields text_fields">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </div>

  <div class="fields text_fields">
    <%= f.label :preorder_time %>
    <%= f.text_field :preorder_time %>
  </div>

  <div class="fields text_fields">
    <%= f.label :portion_size %>
    <%= f.text_field :portion_size %>
  </div>

  <div class="fields text_fields">
    <%= f.label :minimum_order_qty %>
    <%= f.text_field :minimum_order_qty %>
  </div>

  <div class="fields text_fields">
    <%= f.label :hola_buy_price %>
    <%= f.text_field :hola_buy_price %>
  </div>

  <div class="fields text_fields">
    <%= f.label :hola_sell_price %>
    <%= f.text_field :hola_sell_price %>
  </div>

</div>