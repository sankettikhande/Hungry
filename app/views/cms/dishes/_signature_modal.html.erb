<div id="recipe-modal" class="signature-modal">
  <div class="modal fade bs-example-modal-sm" id="sign-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button class="btn-close pull-right" data-dismiss="modal">x</button>
          <p>Delivery on:</p>
        </div>
        <%= form_tag "/create_signature_order", :method => "POST", :id => "signature_form" do %>
        <div class="modal-body modal-form">
          <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
              <div class="form-group">
                <input type="text" class="form-control btn-default validate[required]" name="order[date]" id='datetimepicker5' placeholder="Pick Date"/>
              </div>
              <div class="row">
                <div class="col-xs-6">
                  <div class="form-group hola-cal">
                    <input type="text" class="form-control btn-default validate[required]" name="order[from_time]" id='datetimepicker-from' placeholder="From Time"/>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="form-group hola-cal">
                    <input type="text" class="form-control btn-default validate[required]" name="order[upto_time]" id='datetimepicker-upto' placeholder="Upto Time"/>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-3">
              <p class="form-control looks-input">Qty</p>
            </div>
            <div class="col-xs-3">
              <button class="btn btn-orange disabled" type="button" id="signature-minus-order" disabled>-1</button>
            </div>
            <div class="col-xs-3">
              <input type="hidden" name="order[quantity]" id="signature_qty" value="0"/>
              <input type="hidden" name="dish_id" value="<%= @signature_dish.id %>" />
              <p class="form-control looks-input" id="order-count">0</p>
            </div>
            <div class="col-xs-3">
              <button class="btn btn-orange" type="button" id="signature-add-order">+1</button>
            </div>
          </div>
          <div class="container-fluid seperator-5">
            <div class="row">
              <div class="col-xs-6">
                <p class="text-left">Cost: <span id="signature-cost"><%= @signature_dish.price %>/p</span></p>
              </div>
              <div class="col-xs-6">
                <p class="text-right">Bill: <span id="signature-total">0</span></p>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <button type="button" class="btn btn-flat btn-saffron btn-block" id="signature-submit">Submit</button>
              </div>
            </div>
          </div>

        </div>
        <% end %>
        <div class="modal-footer">
          <div class="row">
            <div class="col-xs-12 text-center">
              <p class="text-6">Signature Orders are taken subject<br> to Chef's availability.<br> We'll confirm with <br>payment details in 1 hour.</p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>