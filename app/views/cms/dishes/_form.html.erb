<%#= javascript_include_tag :defaults, "nested_form" %>
<%= f.cms_text_field :name %>
<%= f.cms_drop_down :cheff_id, ChefCoordinate.find(:all,:order => 'name asc').collect { |s| [s.name, s.id] },
                    :include_blank => true, :label => "Cheff",
                    :instructions => "Select Cheff for the dish." %>
<div class="fields text_fields">
  <label for="dish_dish_image">Dish Image</label>
  <%= f.file_field :dish_image, :label => "Dish Image" %>
</div>
<%= f.cms_drop_down :if_signature, ["true", "false"] %>
<%= f.cms_drop_down :dish_type, ["veg", "non-veg"] %>
<%= f.cms_text_field :portions %>
<%= f.cms_text_field :price %>
<%= f.cms_text_editor :information, :class => "ckeditor" %>
<div id="ingredients">
<%= f.fields_for :ingredients, f.object.ingredients.build do |f| %>
    <%= f.cms_text_field :ingredient_name %>
    <%= f.cms_text_field :quantity %>
    <%= f.cms_text_field :special_remarks %>
<% end %>
</div>
<p><%#= link_to_add_fields "Add Ingredients", f, :ingredients %></p>