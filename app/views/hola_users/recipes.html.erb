<div class="container-fluid">
<div class="row row-offcanvas row-offcanvas-left">
<div class="col-xs-12">
<div class="row">
  <div class="col-xs-12">
    <div class="touch-sides">
      <ul class="tab-menubar" role="tablist">
        <li class="active"><a role="tab" data-toggle="tab" href="#tab-search">Search</a></li>
        <li><a role="tab" data-toggle="tab" href="#tab-popular">Most Popular</a></li>
        <li><a role="tab" data-toggle="tab" href="#tab-fav">Favourites</a></li>
      </ul>
      <span><a href="filters.html" class="btn-filter"></a></span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="search-bar">
      <div class="input-group">
        <span class="input-group-addon">Search</span>
        <%= form_tag "/recipes", :method => 'GET' do |f| %>
            <input type="search" class="form-control" placeholder="Type to search..." name="recipe_name">
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
<div class="col-xs-12">
<div class="hola-cards">
<div class="tab-content">
<div class="tab-pane active" id="tab-search">
  <% fav_recipes = set_fav_recipes()  %>
  <% max_fav = fav_recipes.values.max %>
  <% if @searched_recipe %>
    <% @searched_recipe.each do |recipe| %>
      <div class="cuboid"><a href="#">

        <ul class="square e-recipe">
          <li class="entity-card">
            <div class="entity-image">
              <%= image_tag recipe.meal_info.picture.image.url, :class => "center-block", :alt => recipe.meal_info.picture.image.url %>
            </div>
            <div class="entity-tag">
              <% percent = set_heart_value(recipe, fav_recipes) %>
              <ul class="entity-hearts">
                <% if percent && percent.between?(0, 35)%>
                    <li class="heart filled"></li>
                    <li class="heart"></li>
                    <li class="heart"></li>
                <% elsif percent && percent.between?(36,70) %>
                    <li class="heart filled"></li>
                    <li class="heart filled"></li>
                    <li class="heart"></li>
                <% elsif percent && percent.between?(71,100) %>
                    <li class="heart filled"></li>
                    <li class="heart filled"></li>
                    <li class="heart"></li>
                <% else %>
                    <li class="heart"></li>
                    <li class="heart"></li>
                    <li class="heart"></li>
                <% end %>
              </ul>
            </div>
          </li>
          <li class="entity-name <%=set_menu_icon(recipe)%>"><%= recipe.meal_info.name %></li>
          <li class="entity-by"><%= recipe.cheff.chef_coordinate.name %></li>
          <li class="entity-cuisine">
            <% recipe.cheff.cuisine_styles.each do |cuisine| %>
                <span><%= cuisine.name %></span>
            <% end %>
          </li>
        </ul></a>
      </div>
    <% end %>
  <% else %>
      <% @recipes.each do |recipe| %>
          <div class="cuboid"><a href="#">

            <ul class="square e-recipe">
              <li class="entity-card">
                <div class="entity-image">
                  <%= image_tag recipe.meal_info.picture.image.url, :class => "center-block", :alt => recipe.meal_info.picture.image.url %>
                </div>
                <div class="entity-tag">
                  <% percent = set_heart_value(recipe, fav_recipes) %>
                  <ul class="entity-hearts">
                    <% if percent && percent.between?(0, 35)%>
                        <li class="heart filled"></li>
                        <li class="heart"></li>
                        <li class="heart"></li>
                    <% elsif percent &&  percent.between?(36,70) %>
                        <li class="heart filled"></li>
                        <li class="heart filled"></li>
                        <li class="heart"></li>
                    <% elsif percent &&  percent.between?(71,100) %>
                        <li class="heart filled"></li>
                        <li class="heart filled"></li>
                        <li class="heart filled"></li>
                    <% else %>
                        <li class="heart"></li>
                        <li class="heart"></li>
                        <li class="heart"></li>
                    <% end %>
                  </ul>
                </div>
              </li>
              <li class="entity-name <%=set_menu_icon(recipe)%>"><%= recipe.meal_info.name %></li>
              <li class="entity-by"><%= recipe.cheff.chef_coordinate.name %></li>
              <li class="entity-cuisine">
                <% recipe.cheff.cuisine_styles.each do |cuisine| %>
                    <span><%= cuisine.name %></span>
                <% end %>
              </li>
            </ul></a>
          </div>
      <% end %>
  <% end %>
</div>
