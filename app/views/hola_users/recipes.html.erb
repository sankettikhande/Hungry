<div class="container-fluid">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-12">
          <div class="touch-sides">
            <ul class="tab-menubar" role="tablist">
              <li class="active"><a role="tab" data-toggle="tab" href="#tab-search">Search</a></li>
              <li><a role="tab" data-toggle="tab" href="#tab-popular">Most Popular</a></li>
              <li><a role="tab" data-toggle="tab" href="#tab-fav">Favourites</a></li>
            </ul>
            <span><a href="filters.html" class="btn-filter"></a></span>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="search-bar">
            <div class="input-group">
              <span class="input-group-addon">Search</span>
              <%= form_tag "/recipes", :method => 'GET' do |f| %>
              <input type="search" class="form-control" placeholder="Type to search..." name="recipe_name">
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="hola-cards">
            <div class="tab-content">
              <div class="tab-pane active" id="tab-search">
                <% fav_recipes = set_fav_recipes()  %>
                <% max_fav = fav_recipes.values.max %>
                <% if @searched_recipe %>
                  <% @searched_recipe.each do |recipe| %>
                    <%= render 'recipe_list_item', recipe: recipe, fav_recipes: fav_recipes, max_fav: max_fav %>
                  <% end %>
                <% else %>
                  <% @recipes.each do |recipe| %>
                    <%= render 'recipe_list_item', recipe: recipe, fav_recipes: fav_recipes, max_fav: max_fav %>
                  <% end %>
                <% end %>
              </div>
              <div class="tab-pane" id="tab-popular">
                <% if @most_popular_recipes %>
                  <% @most_popular_recipes.each do |recipe| %>
                    <%= render 'recipe_list_item', recipe: recipe, fav_recipes: fav_recipes, max_fav: max_fav %>
                  <% end %>
                <% end %>
              </div>


              <div class="tab-pane" id="tab-fav">
                <% if @favorite_recipes %>
                  <% @favorite_recipes.each do |fav_recipe| %>
                    <%= render 'recipe_list_item', recipe: recipe, fav_recipes: fav_recipes, max_fav: max_fav %>
                  <% end %>
                <% else %>
                  <%= alert_message "There are no favourite recipes." %>
                <% end %>
              </div>
            </div>
          </div>

        </div>
      </div>


    </div>

    </div>
  </div>
