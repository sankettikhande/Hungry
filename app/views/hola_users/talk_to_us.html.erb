 <div class="container-fluid">
    <div class="grey-header">
        <h4 class="text-center text-uppercase">We'd love to hear from you !</h4>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
        <div class="col-xs-5">
          <div class="form-group">
              <a href="tel:808080HOLA" class="btn btn-block btn-stroke"><i class="fa fa-envelope"></i> 808080HOLA</a>
          </div>
        </div>
        <div class="col-xs-7">
          <div class="form-group">
              <a href="mailto:feedus@holachef.com" class="btn btn-block btn-stroke"><i class="fa fa-envelope"></i> feedus@holachef.com</a>
          </div>
        </div>
    </div>

    <% if flash[:notice] %>
      <div class="successMsg"><%= flash[:notice] %></div>
    <% elsif @feedback && @feedback.errors.any? %>
      <div id="errorExplanation" class="errorExplanation">
        <ul>
          <% @feedback.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_tag "/feedback" do |f| %>
    <div class="row">
      <div class="col-xs-12">
      <div class="normal-body">
        <div class="input-group">
          <textarea class="form-control" rows="5" placeholder="Leave your feedback here..." name="feedback"></textarea>
        </div>
        <div class="input-card">
            <input type="email" class="form-control" placeholder="Enter your email" name="email">
          </div>
          <!--
          ************************************************   check design *************************************************
                - this below submit should be placed in footer, as per design.
          -->


        <div class="form-group seperator-15">
          <input type="submit" value="Submit" class="btn btn-saffron" />
        </div>


      </div>
      </div>
    </div>
    <% end %>

</div>
