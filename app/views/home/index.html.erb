<div class="container seperator-10">
  <div class="row">
    <div class="col-xs-12">
      <div id="hola-container">
        <% if @todays_menu %>
            <% @todays_menu.each do |menu| %>
                <% menu_type = menu.dish.dish_type == "veg" ? "veg" : "non-veg" %>
                <% target = qty_left(menu) > 0 ? "#item-modal" : "#" %>
                <div class="item" data-toggle="modal" data-target="<%=target %>" id="<%=menu.id%>">
                  <input type="hidden" class="menu_price" value="<%=menu.dish.price%>" />
                  <input type="hidden" class="menu_qty" value="" />
                  <input type="hidden" class="menu_max_qty" value="<%= qty_left(menu) %>"/>
                  <input type="hidden" class="chef-profile-pic" value="<%= menu.cheff.cheff_image.url %>"/>
                  <input type="hidden" class="chef-name" value="<%= menu.cheff.name %>"/>
                  <input type="hidden" class="chef-id" value="<%= menu.cheff.id %>"/>
                  <ul class="square">
                    <li class="recipe-block <%=menu_type%>">
                      <% if qty_left(menu) <= 0 %>
                          <div class="recipe-header not-available">
                            <div class="add-lens"></div>
                            <div class="recipe-name">
                              <%= menu.dish.name %>
                            </div>
                            <div class="add-heart"></div>
                          </div>
                      <% elsif !menu.dish.dish_image.blank? %>
                          <div class="recipe-image append-cart">
                            <div class="add-lens"></div>
                            <div class="add-heart"></div>
                            <%= image_tag menu.dish.dish_image.url, :alt=>"#{menu.dish.name}", :class => "img-responsive center-block" %>
                          </div>
                      <% else %>
                          <div class="recipe-header <%=menu_type%> append-cart">
                            <div class="add-lens"></div>
                            <div class="recipe-name">
                              <%= menu.dish.name %>
                            </div>
                            <div class="add-heart"></div>
                          </div>
                      <% end %>
                    </li>
                    <% if  menu.dish.dish_image && qty_left(menu) > 0 %>
                        <li class="recipe-title"><%= menu.dish.name %></li>
                    <% else %>
                        <div class="recipe-image hidden">
                          <div class="add-lens"></div>
                          <div class="add-heart"></div>
                        </div>
                    <% end %>

                    <li class="recipe-tags">
                      <ul class="stock-value">
                        <li class="recipe-stock"><%= qty_left(menu)>0 ? "#{qty_left(menu)} left" :  "Sold Out!" %></li>
                        <li class="recipe-price"><%= qty_left(menu)>0 ? "#{menu.dish.price}/-" : "Sorry :(" %></li>
                      </ul>
                    </li>
                  </ul>
                </div>
            <% end %>
        <% end %>

      </div>
      <div id="recipe-modal">
        <input type="hidden" id="selected_item" value="" />
        <input type="hidden" id="total_price" value="0" />
        <div class="modal fade bs-example-modal-sm" id="item-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-sm">
            <div class="modal-content">
              <div class="modal-header">
                <ul class="user-profile">
                  <li class="profile-pic">
                    <%= link_to image_tag("/assets/user-pic.jpg", :class => "img-responsive center-block"), "/cheff/#{params[:cheff_id]}", :id => "chef_info" %>
                  </li>
                  <li class="user-name">
                    <h3>Mrs. Sharma
                      <span class="user-level">Hola Star</span></h3>
                  </li>
                </ul>
              </div>
              <div class="modal-body"> <!-- below content changes from jquery -->

                <ul class="square">
                  <li class="recipe-block veg">
                    <div class="recipe-header">
                      <div class="add-lens"></div>
                      <div class="recipe-name">Cheese Loaded Nachos with Beans</div>
                      <div class="add-heart"></div>
                    </div>
                    <div class="recipe-image hidden">
                    </div>
                  </li>
                  <li class="recipe-title hidden"></li>
                  <li class="recipe-tags">
                    <ul class="stock-value">
                      <li class="recipe-stock"><span class="stock-count">10</span> left</li>
                      <li class="recipe-price">180/-</li>
                    </ul>
                  </li>
                </ul>

              </div>
              <div class="modal-footer modal-form">
                <div class="row">
                  <div class="col-xs-12 text-center">
                    <div class="row">
                      <div class="col-xs-3">
                        <button class="btn btn-orange disabled" type="button" id="add-order-minus" disabled>-1</button>
                      </div>
                      <div class="col-xs-3">
                        <p class="form-control looks-input" id="order-count">0</p>
                      </div>
                      <div class="col-xs-3">
                        <button class="btn btn-orange" type="button" id="add-order-plus">+1</button>
                      </div>
                      <div class="col-xs-3">
                        <button type="button" class="btn btn-link text-orange" data-dismiss="modal" id="order-done">Done</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div> <!-- modal ends -->

    </div>
  </div>
</div>


