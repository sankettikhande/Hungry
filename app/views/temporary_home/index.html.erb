<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="/assets/jquery.easing.1.3.js"></script>
<script src="/assets/jquery.animate-enhanced.min.js"></script>
<script src="/assets/hammer.min.js"></script>
<script src="/assets/jquery.superslides.min.	js" type="text/javascript" charset="utf-8"></script>
<script>
    $(function() {
        var $slides = $('#slides');

        Hammer($slides[0]).on("swipeleft", function(e) {
            $slides.data('superslides').animate('next');
        });

        Hammer($slides[0]).on("swiperight", function(e) {
            $slides.data('superslides').animate('prev');
        });

        $slides.superslides({
            hashchange: true
        });
    });
    $(document).ready(function () {
        $("#subs-email").click(function() {
            if($('#get-email').val().match(/[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}/i)){
                $.ajax({
                    url: "/email",
                    data: $("#store_email").serialize(),
                    type: 'POST',
                    dataType: "script"
                });
                $(".thank-msg").css("display", "block");
                $(".thank-msg").html("Thanks! We will get back to you soon.");
                $('#get-email').val("");
            }
            else{
                $(".thank-msg").css("display", "block");
                $(".thank-msg").html("Please enter your email in proper format.");
                $('#get-email').removeAttr('value');
            }
        });
        $("#get-email").keypress(function(e) {
            if (e.keyCode == 13){
                e.preventDefault();
                if($('#get-email').val().match(/[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}/i)){
                    $.ajax({
                        url: "/email",
                        data: $("#store_email").serialize(),
                        type: 'POST',
                        dataType: "script"
                    });
                    $(".thank-msg").css("display", "block");
                    $(".thank-msg").html("Thanks! We will get back to you soon.");
                    $('#get-email').val("");
                }
                else{
                    e.preventDefault();
                    $(".thank-msg").css("display", "block");
                    $(".thank-msg").html("Please enter your email in proper format.");
                    $('#get-email').removeAttr('value');
                }
            }
        });
    });
</script>


</body>
</html>