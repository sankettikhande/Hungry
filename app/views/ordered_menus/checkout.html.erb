<div class="container-fluid back-white">
  <div class="row">
    <div class="col-xs-12">
      <div class="container">
        <ul class="booked-orders">
          <li class="food-bill">
            <span class="item-name">Meal</span>
            <span class="item-qty">Qty</span>
            <span class="item-cost">Cost</span>
          </li>
          <% if session[:cart] %>
              <% session[:cart].each do |order| %>
                  <% order.each do |order_id, order_attrs| %>
                      <li class="food-bill">
                        <span class="item-name"><%= order_attrs['dish'] %></span>
                        <span class="item-qty"><%= order_attrs['quantity'] %></span>
                        <span class="item-cost"><%= order_attrs['quantity'].to_i * order_attrs['price'].to_i %></span>
                      </li>
                  <% end %>
              <% end %>
          <% end %>
          <li class="food-bill">
            <span class="item-name">&nbsp;</span>
            <span class="item-qty">Total</span>
            <span class="item-cost"><%= @order.total %></span>
          </li>
        </ul>

      </div>

    </div>
  </div>
</div> <!-- fluid container ends -->
<div class="container-fluid back-white seperator-10">
  <div class="row">
    <div class="col-xs-12">
      <div class="container">

        <ul class="del-details">
          <li class="del-d del-header roboto">Delivery Details</li>
          <li class="del-d del-warning roboto">Orders are delivered in ~30min of placing order</li>
          <li class="del-d roboto"><input class="lower-only active" type="text" placeholder="Name" id="u-name" maxlength="50"></li>
          <li class="del-d roboto"><input class="lower-only" type="tel" placeholder="Phone Number" id="u-contact" maxlength="10"></li>
          <li class="del-d roboto"><input class="lower-only" type="text" placeholder="Address" id="u-address" maxlength="250"></li>
          <li class="del-d check-mark roboto text-center">
            <input class="css-checkbox" type="checkbox" id="save-del-details" checked="checked">
            <label class="css-label roboto" for="save-del-details">Save my details</label></li>
        </ul>

      </div>

    </div>
  </div>
</div> <!-- fluid container ends -->
<div class="floral-block"></div>
</div><!-- #wrap ends -->
<%= javascript_include_tag "jquery-1.11.0.min" %>
<script>
  $(document).ready(function(){
      $("#footer").html("<div class='container'><div class='row'><div class='col-xs-12'><div class='tap-text'>" +
              "<p class='text-center'><a class='text-orange' href='/payment-method'>Select Payment Method</a></p>" +
              "</div>" +
              "<ul class='chosen-options hidden'>" +
              "<li class='billing'><a href='#'>500/-</a></li>" +
              "<li class='checkout'><a href='#'>Checkout</a></li>" +
              "</ul></div></div></div>")
  })
</script>