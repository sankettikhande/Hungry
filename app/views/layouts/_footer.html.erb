<div id="footer" class="footer">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="tap-text hidden text-orange"><p class="text-center">Tap on a Cart to Add/Remove</p></div>
        <ul class="chosen-options">
          <li class="billing" id="bill_amount">
            <%= calculate_total_price() %>/-
          </li>
          <li class="checkout">
            <% if session[:cart].blank? %>
                <%= link_to "Checkout", '#', :class => "text-grey", :id=> "checkout_link" %>
            <% else %>
                <%= link_to "Checkout", '/review_order', :id=> "checkout_link" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>